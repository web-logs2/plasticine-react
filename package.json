{
  "private": true,
  "author": "Plasticine-Yang",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter './packages/**' --parallel dev",
    "dev:dts": "pnpm --filter './packages/**' --parallel dev --dts",
    "build": "pnpm --filter './packages/**' --parallel build",
    "test": "vitest",
    "test:u": "vitest -u",
    "play:jsx-runtime:dev": "pnpm -C playgrounds/jsx-runtime dev",
    "commit": "cz",
    "update-pkgs": "taze -wi",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@plasticine-yang/eslint-config-typescript": "^0.1.6",
    "@types/node": "^18.15.13",
    "commitizen": "^4.3.0",
    "cz-git": "^1.6.1",
    "eslint": "^8.39.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "taze": "^0.8.5",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  }
}
